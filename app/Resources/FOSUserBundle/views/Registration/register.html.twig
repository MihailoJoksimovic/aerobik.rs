{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">

        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-signin">
            <h2 class="form-signin-heading">Register</h2>

            {{ form_widget(form._token) }}

            <input type="email" class="form-control" placeholder="Email" name="fos_user_registration_form[email]" required autofocus>

            <input type="text" class="form-control" placeholder="Username" name="fos_user_registration_form[username]" required>

            <input type="password" class="form-control" placeholder="Password" name="fos_user_registration_form[plainPassword][first]" required>

            <input type="password" class="form-control" placeholder="Repeat Password" name="fos_user_registration_form[plainPassword][second]" required>

            <input type="submit" id="_submit" name="_submit" value="Register" class="btn btn-lg btn-primary btn-block"/>
        </form>

    </div>
{% endblock %}
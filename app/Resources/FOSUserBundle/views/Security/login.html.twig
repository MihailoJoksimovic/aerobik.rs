{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">

        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="POST">
            <h2 class="form-signin-heading">Login</h2>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <input type="text" class="form-control" placeholder="Username" name="_username" required autofocus>

            <input type="password" class="form-control" placeholder="Password" name="_password" required>

            <input type="submit" id="_submit" name="_submit" value="Login" class="btn btn-lg btn-primary btn-block"/>
        </form>

    </div>
{% endblock %}